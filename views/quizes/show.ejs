<h1><%= quiz.pregunta %></h1>
<form enctype="application/x-www-form-urlencoded" method="get" action="/quizes/<%= quiz.id %>/answer">
  <input type="text" name="response" placeholder="Escriba su respuesta ..">
  <button type="submit">Contestar</button>
</form>

<p><a href="/quizes/<%= quiz.id %>/comments/new"><button type="button">Nuevo comentario</button></a></p>
<% for(i in quiz.Comments){ %>
<p> - <%= quiz.Comments[i].texto %></p>
<% } %>
